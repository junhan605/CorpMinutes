<p id="notice"><%= notice %></p>

<div class="title_bar" id="title_bar">
  <div class="titlebar_left">
    <h1 id="page_title">Companies (<%=current_user.no_of_company %>)</h1>
    <span class="breadcrumb" style="background: #e4e6e6;">
      <%= link_to 'Home', "/" %>
      <span class="breadcrumb_sep">/</span>
      <%= link_to 'Companies', companies_path %>
    </span>

  </div>
  <div id="titlebar_right">
    <div class="action_items">
      <span class="action_item">
        <%= link_to 'New Company', new_company_path %>
      </span>
    </div>
  </div>
</div>

<div class="paginated_collection">
  <div class="paginated_collection_contents">

    <table class="index_table index">

      <thead>
        <tr>
          <th class="sortable col col-name">Name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each_with_index do |company, index| %>
          <% tr_class = (index % 2) == 0 ? "odd" : "even" %>
          <tr class=<%= tr_class %> >
            <td><%= link_to company.name, company_minutes_path(company_id: company) %></td>
            <td><%= link_to 'New >>', new_company_minute_path(company_id: company), class: 'btn btn-default btn-xs' %></td>
            <td>
              <%= link_to 'Show', company, class: "view_link member_link" %>
              <%= link_to 'Edit', edit_company_path(company), class: "edit_link member_link" %>
              <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_link member_link" %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>
