<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<div>
  <div class="panel-body">
    <table class="table table-striped table-condensed table-responsive">

      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= link_to company.name, show_minutes_company_path(company), method: :post %></td>
            <td><%= link_to 'New >>', '#', class: 'btn btn-default btn-xs' %></td>
            <td>
              <%= link_to 'Show', company, class: 'btn btn-default btn-xs' %>
              <%= link_to 'Edit', edit_company_path(company), class: "btn btn-info btn-xs" %>
              <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>

<br>

