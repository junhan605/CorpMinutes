<%= simple_form_for @minute, url: company_minutes_path(@company) do |f| %>
  <%= f.error_notification %>
  <div id="main_content_wrapper">
    <div id="main_content">
      <fieldset class="inputs">
        <legend>
          <span>Minute</span>
        </legend>

        <ol>
          <li class="string input optional stringish">
            <%= f.input :minute_type %>
          </li>

          <li class="string input optional stringish">
            <%= f.input :location %>
          </li>

          <li class="string input optional stringish">
            <div class="field">
              <%= f.label :present %>
            </div>
          </li>

          <li class="boolean input optional">
            <div class="field">
              <label>
                <%= check_box_tag "michael"%>
                MICHEAL (PRESIDENT)
              </label>
            </div>
          </li>

          <li class="boolean input optional">
            <div class="field">
              <label>
                <%= check_box_tag "sonny"%>
                SONNY (TREASURER)
              </label>
            </div>
          </li>

          <li class="boolean input optional">
            <div class="field">
              <label>
                <%= check_box_tag "kim"%>
                KIM (DIRECTOR)
              </label>
            </div>
          </li>

          <li class="string input optional stringish">
            <%= f.input :other_party %>
          </li>

          <li class="string input optional stringish">
            <%= f.input :escriibe_property %>
          </li>
        </ol>
      </fieldset>
      <%= f.hidden_field :company_id, :value => @company.id %>
      <fieldset class="actions">
        <ol>
          <li class="action input_action">
            <%= f.button :submit %>
          </li>
          <li class="cancel">
            <%= link_to "Cancel", companies_path %>
          </li>
        </ol>
      </fieldset>
    </div>
  </div>
<% end %>
